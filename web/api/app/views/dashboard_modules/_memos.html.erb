<div class="card mb-3">
  <div class="card-header text-white bg-dark">コメント
    <a class="float-right text-white" href="#" data-toggle="modal" data-target="#memoModal"><i class="fas fa-plus"></i></a>
  </div>
  <div class="card-body">
    <%= form_tag({controller: 'memos', action: 'create'}, { remote: true, class: 'js_memos-form'}) do %>
      <div class="field mb-2">
        <%= text_area_tag :body, nil, {class: 'form-control', placeholder: "Waiting comment..", style: 'height: 180px;'} %>
      </div>
      <%= hidden_field_tag :project_id, @project.id %>
      <%= submit_tag 'Add', {class: "btn btn-info"} %>
    <% end %>
    <div id="js_memo" class="mt-3 list-group">
      <% @memos.each do |m| %>
        <div class="list-group-item">
          <div class="py-2 d-flex w-100 justify-content-between">
            <div>
              <img src="https://placehold.jp/30x30.png" width="30">
              <%= m.id %>: ユーザー名 <%= m.created_at %>
            </div>
            <small><a href="/memos/<%= m.id %>/edit" class="float-right">編集</a></small>
          </div>
          <div class="py-2"> <%= m.body %> </div>
          <div class="pt-2 border-top"><a href="">♥ <small>いいね！</small></a></div>
        </div>
      <% end %>
    </div>
  </div>
</div>