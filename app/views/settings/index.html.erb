<p id="notice"><%= notice %></p>

<h1>Settings</h1>

<table>
  <thead>
    <tr>
      <th>Language</th>
      <th>Post per</th>
      <th>Week start</th>
      <th>Push mail</th>
      <th>Push interval</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.language %></td>
        <td><%= setting.post_per %></td>
        <td><%= setting.week_start %></td>
        <td><%= setting.push_mail %></td>
        <td><%= setting.push_interval %></td>
        <td><%= link_to 'Show', setting %></td>
        <td><%= link_to 'Edit', edit_setting_path(setting) %></td>
        <td><%= link_to 'Destroy', setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Setting', new_setting_path %>
